{% extends 'base.html.twig' %}

{% block title %}Créer un compte étudiant{% endblock %}

{% block body %}
    <div class="my-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <h1 class="text-lg font-medium leading-6 text-gray-900">Créer son compte</h1>

            <div class="my-4">
                {{ form_start(form) }}
                    {{ form_row(form) }}
                    <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Créer son compte</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
