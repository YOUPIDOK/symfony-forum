{% extends 'base.html.twig' %}

{% block title %}Ateliers{% endblock %}

{% block body %}
    {% if forum is not null %}
        <ul class="mx-auto p-4 max-w-2xl">
            {% for workshop in forum.workshops %}
                <li class="overflow-hidden rounded-lg bg-white shadow my-4">
                    <div class="bg-white p-6">
                        <div class="sm:flex sm:items-center sm:justify-between">
                        <div class="sm:flex sm:space-x-5">
                            <div class="mt-4 text-center sm:mt-0 sm:pt-1 sm:text-left">
                            <p class="text-sm font-medium text-gray-600">{{ workshop.sector }}</p>
                            <p class="text-xl font-bold text-gray-900 sm:text-2xl">{{ workshop.name }}</p>
                            <p class="text-sm font-medium text-gray-600">{{ workshop.forum }}</p>
                            </div>
                        </div>
                        <div class="mt-5 flex justify-center sm:mt-0">
                            <a href="{{ path('workshop', {'id': workshop.id}) }}" class="flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50">Voir l'atelier</a>
                        </div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 divide-y divide-gray-200 border-t border-gray-200 bg-gray-50 sm:grid-cols-3 sm:divide-y-0 sm:divide-x">
                        <div class="px-6 py-5 text-center text-sm font-medium">
                            <span class="text-gray-900">{{ workshop.speakers|length }}</span>
                            <span class="text-gray-600">Intervenants</span>
                        </div>

                        <div class="px-6 py-5 text-center text-sm font-medium">
                            <span class="text-gray-900">{{ workshop.jobs|length }}</span>
                            <span class="text-gray-600">MÃ©tiers</span>
                        </div>

                        <div class="px-6 py-5 text-center text-sm font-medium">
                            <span class="text-gray-900">{{ workshop.workshopReservations|length }}</span>
                            <span class="text-gray-600">insctrits</span>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}


    {% if forum is null or forum.workshops|length == 0  %}
        Aucun atelier disponible pour le moment.
    {% endif %}
{% endblock %}