{% extends 'base.html.twig' %}

{% block title %}HighSchool index{% endblock %}

{% block body %}
    <h1>HighSchool index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for high_school in high_schools %}
            <tr>
                <td>{{ high_school.id }}</td>
                <td>{{ high_school.name }}</td>
                <td>
                    <a href="{{ path('admin_high_school_show', {'id': high_school.id}) }}">show</a>
                    <a href="{{ path('admin_high_school_edit', {'id': high_school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_high_school_new') }}">Create new</a>
{% endblock %}
