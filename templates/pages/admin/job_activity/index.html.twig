{% extends 'base.html.twig' %}

{% block title %}JobActivity index{% endblock %}

{% block body %}
    <h1>JobActivity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_activity in job_activities %}
            <tr>
                <td>{{ job_activity.id }}</td>
                <td>{{ job_activity.name }}</td>
                <td>
                    <a href="{{ path('admin_job_activity_show', {'id': job_activity.id}) }}">show</a>
                    <a href="{{ path('admin_job_activity_edit', {'id': job_activity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_job_activity_new') }}">Create new</a>
{% endblock %}
