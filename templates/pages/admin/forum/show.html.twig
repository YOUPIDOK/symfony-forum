{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <h1>Forum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ forum.name }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ forum.startAt ? forum.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ forum.endAt ? forum.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_forum_index') }}">back to list</a>

    <a href="{{ path('admin_forum_edit', {'id': forum.id}) }}">edit</a>

    {{ include('pages/admin/forum/_delete_form.html.twig') }}
{% endblock %}
