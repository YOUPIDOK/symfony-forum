{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.rolesValue }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Inscrit le</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index') }}">back to list</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('pages/admin/user/_delete_form.html.twig') }}

    {% if not is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin_user_allow_admin', {'id': user.id}) }}">Ajouter les droits admin</a>
    {% else %}
        <a href="{{ path('admin_user_disallow_admin', {'id': user.id}) }}">Supprimer les droits admin</a>
    {% endif %}
{% endblock %}
